!!!
%html
  %head
    %title Kukariri
    = stylesheet_link_tag("application", :media => "all")
    = javascript_include_tag(be_backbone? ? "rails/application" : "kukariri_backbonejs/application")
    = csrf_meta_tags
    - if protect_against_forgery?
      %meta{:content => u(cookies[Rails.application.config.session_options[:key]]), :name => "session-key-value"}
  %body.container-fluid
    - if current_user
      %section.header
        %ul.span11
          %li.span2
            = link_to(t("items.items_list"), items_path)
          %li.span2
            = link_to(t("contacts.new_contact"), "/#/contacts/new")
          %li.span2
            = link_to(t("contacts.contact_lists"), "/#/contacts")
          %li.span2
            = link_to(t("items.new_item"), "/#/items/new")
          %li.span2
            %ul{:class => "nav", :role => "navigation"}
              %li.dropdown
                = link_to(t("friends.friends_lists"), "#", {:class => "dropdown-toggle", "data-toggle" => "dropdown", :role => "button"})
                %ul{:class => "dropdown-menu", "aria-labelledby" => "drop2", :role => "menu"}
                  %li{:role => "presentation"}
                    = "Pas d'amis"
          %li.span2
            = link_to(t("killbills.lending_money"), "http://killbills.me/") 

        %div.span1
          %ul
            %li
              = link_to(t("layout.logout"), destroy_user_session_path, :method => :delete)

    %section.notice
      %ul
      #loader
        = image_tag('pictures/ajax_loader/ajax-loader.gif')

    %section.container.container-fluid
      = yield

    %section.modal_box.modal.hide.fade
      %div.modal-header
        %button{:type => "button", :class => "close", "data-dismiss" => "modal", "aria-hidden" => true}
          &times;
      %div.modal-body
      %div.modal-footer
        %button{:class => "btn", "data-dismiss" => "modal", "aria-hidden" => true}
          = "close"

    %section.footer
