%p
  :if !_.isEmpty(contact)
    %input{type: "hidden", name: name+"[contact_id]", value: contact.id}
  %label{for: name+"_id"} = translate.activerecord.attributes.type.descriptif
  %br
  %select{name: name+"[id]"}
    :each type in types
      :if _.isEmpty(type_selected) 
        %option{value: type.id, selected:  }
          = type.descriptif
      :if !_.isEmpty(type_selected)
        :if type_selected.id == type.id
          %option{value: type.id, selected: "selected"}
            = type.descriptif
        :if !type_selected.id == type.id
          %option{value: type.id}
            = type.descriptif
         
