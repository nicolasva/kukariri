%form#edit_items
  %p
    %label{for: "item_title"} = "Title"
    %br
    %input{type: "text", id: "item_title", name: "item[title]", value: item.title}

  %p
    %label{for: "item_types_attributes_0_descriptif"} = "Descriptif"
    %br
    %textarea{id: "item_types_attributes_0_descriptif", name: "item[types_attributes][0][descriptif]"}
      = item.types[0].descriptif

  %div#container
    %span#select_files
      = "Select files"
    %div.caroussel.other_pictures
      %ul
        :each picture in pictures
          %li{class: 'picture_sort', id: picture.id}
            %img{ src: picture.picture.url}
  .actions
    %ul
      %li
        %input{type: "button", name: "button_items_go_contact", value: "Add Contact for this item", class: "class_add_contact_item"}
      %li
        %input{type: "submit", name: "submit_items", value: "Submit", class: "id_submit_items"}
